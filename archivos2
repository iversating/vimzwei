wp plugin install https://docs.easysendy.com/email-campaigns/wp-content/uploads/sites/2/2018/09/wp-easysendy-form-integrator.zip --path="\$PTH" --allow-root
wp plugin install https://github.com/iversating/vim/raw/master/plgwp/updraftplus-premium.zip --activate --path="\$PTH" --allow-root
wp plugin install https://github.com/iversating/vim2.0/raw/master/plgwp/cartflows.zip --path="\$PTH" --allow-root
wp plugin install https://github.com/iversating/vim2.0/raw/master/plgwp/cartflows-pro.zip --path="\$PTH" --allow-root
wp plugin activate akismet --path="\$PTH" --allow-root
wp plugin install groundhogg --activate --activate --path="\$PTH" --allow-root

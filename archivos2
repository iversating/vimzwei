if [ $INPUT ]; then
WPPASSS="$INPUT"
export WPPASSS
fi
WPPASS=\$(echo "\$WPPASSS" | sed 's/\$/\\$/g')
    export WPPASS
echo ""   
echo -n " - Escribe un  'CORREO'  para la cuenta principal de WordPress, [enter] = "
read INPUT
if [ \$INPUT ]; then
EMAIL="\$INPUT"
export EMAIL
fi
printf "\033c"
echo "*************************************************************************************************"
echo "***********                                                                           ***********"
echo "***********                         CONSTRUCTOR WEB 'VIM-v2.0'                        ***********"
echo "***********                                                                           ***********"
echo "***********                    https://ventasimpactantes.com/script                   ***********"
echo "***********                                                                           ***********"
